{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/product.css') }}">
{% endblock %}

{% block body %}
<div class="container">

    <h1>Gestion des produits</h1>

    {% include 'product/_form.html.twig' with {'form': form} %}

    <div class="card">
        <h2>Liste des produits</h2>

        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td>{{ product.name }}</td>
                        <td>{{ product.price }} â‚¬</td>
                        <td>
                            <a href="{{ path('product_show', {'id': product.id}) }}">Voir / Commenter</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="empty-row">Aucun produit pour le moment.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

</div>
{% endblock %}
